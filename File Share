##SAMBA File share##
  sudo apt install samba
##Check the status##
  systemctl status smbd 
##create a directory for the share file##
mkdir /home/<username>/sambashare
#Orginal config file
  cd /etc/samba
  ls
##Modify the file to allow calles from windows computer
  sudo nano smb.conf
[samabashare]
  comment = Samaba on Ubuntu
  path = /home/username/sambashare
  read only = no
  browsable = yes 
